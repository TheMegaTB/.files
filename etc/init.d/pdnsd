depend() {
	need localmount hostname net
}

start() {
   	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --background --exec /usr/bin/pdnsd
	eend $?
}

stop() {
	ebegin "Shutting down ${SVCNAME}"
	start-stop-daemon --stop --quiet --exec /usr/bin/pdnsd
	eend $?
}
