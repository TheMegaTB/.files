# $Id$

name="pdnsd"
description="A local DNS caching server"

depend() {
	need localmount
	after net
}

start() {
   	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --background --exec /usr/bin/pdnsd -- -a
	eend $?
}

stop() {
	ebegin "Shutting down ${SVCNAME}"
	start-stop-daemon --stop --quiet --exec /usr/bin/pdnsd -- -a
	eend $?
}
