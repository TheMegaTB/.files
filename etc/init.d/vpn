depend() {
	before netmount
	need net
	need localmount
}

start() {
	ebegin "Opening VPN tunnel"
	start-stop-daemon --background --start --exec /usr/bin/vpnc -- home
	eend $?
}

stop() {
	ebegin "Closing VPN tunnel"
	start-stop-daemon --stop --exec /usr/bin/vpnc -- home
	eend $?
}
